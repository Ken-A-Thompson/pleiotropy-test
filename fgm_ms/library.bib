author = {Wolf, Jochen B.W. and Ellegren, Hans},
booktitle = {Nature Reviews Genetics},
doi = {10.1038/nrg.2016.133},
isbn = {1471-0064 (Electronic)$\backslash$r1471-0056 (Linking)},
