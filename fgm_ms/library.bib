journal = {Journal of Chemical Ecology},
keywords = {Induction,Lygus hesperus,Salivary glands,Systemic signal transport,Volatiles,Volicitin},
number = {9},
pages = {1733--1747},
pmid = {12449502},
title = {{{\textless}i{\textgreater}Lygus hesperus{\textless}/i{\textgreater} feeding and salivary gland extracts induce volatile emissions in plants}},
