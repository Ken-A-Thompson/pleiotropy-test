pages = {1999--2017},
pmid = {25891044},
title = {{Contemporary evolution during invasion: evidence for differentiation, natural selection, and local adaptation.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25891044},
volume = {49},
year = {2015}
