isbn = {1932-6203},
issn = {19326203},
journal = {PLoS ONE},
number = {9},
pages = {e12767},
pmid = {20862274},
title = {{A rapid, strong, and convergent genetic response to urban habitat fragmentation in four divergent and widespread vertebrates}},
