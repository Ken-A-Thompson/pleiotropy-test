journal = {Ecology},
keywords = {Adaptive trait introgression,Ecological divergence,Endogeneous selection,Exogeneous selection,Hybrid speciation,Hybrid superiority,Hybrid zones,Hybridization,Local adaptation,Species barriers,Tension zones,Transgressive segregation},
number = {7},
pages = {1688--1699},
title = {{Experimental hybridization as a tool for studying selection in the wild}},
