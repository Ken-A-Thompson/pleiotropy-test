isbn = {00220477},
issn = {00220477},
journal = {Journal of Ecology},
keywords = {Ecological genetics and ecogenomics,Flowering incidence,Gene flow,Maternal effect,Plasticity,Reciprocal hybridization,Silene dioica,Silene latifolia,Stress tolerance},
number = {6},
pages = {1415--1423},
title = {{Stress tolerance in closely related species and their first-generation hybrids: A case study of Silene}},
