doi = {10.1080/10635150600969864},
isbn = {1063-5157},
issn = {10635157},
journal = {Systematic biology},
pages = {715--728},
pmid = {17060194},
title = {{DNA barcoding and taxonomy in Diptera: a tale of high intraspecific variability and low identification success.}},
volume = {55},
year = {2006}
}
