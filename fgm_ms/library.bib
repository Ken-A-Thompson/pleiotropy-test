keywords = {Coevolution,Defense evolution,Herbivorous insects,Latitudinal gradients,Plant speciation,Pollination,Soils,Tropical forests},
number = {11},
pages = {2939--2951},
pmid = {27870033},
title = {{Ode to Ehrlich and Raven or how herbivorous insects might drive plant speciation}},
volume = {97},
