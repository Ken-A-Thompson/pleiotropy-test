isbn = {1095-8290 (Electronic)$\backslash$n0305-7364 (Linking)},
issn = {1095-8290},
journal = {Annals of botany},
keywords = {Biological Evolution,Ecosystem,Genetic,Genetic Variation,Genome,Hybridization,Introduced Species,Plant,Plants,Plants: genetics,Polyploidy},
pages = {19--45},
pmid = {22040744},
title = {{The more the better? The role of polyploidy in facilitating plant invasions.}},
