keywords = {browsing,climatic variation,defoliation,folivory,global census,grazing,latitudinal gradients,leaf age,leaf consumption,plant–herbivore interactions,primary consumption,trophic interactions},
number = {3},
pages = {788--788},
title = {{Percentage leaf herbivory across vascular plant species}},
