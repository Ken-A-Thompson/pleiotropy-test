keywords = {2004,2005,accepted january 5,ecological speciation,habitat isolation,host races,hybrid fitness,isolating mechanisms,local adaptation,received july 9,reproductive barriers,sexual isolation},
pages = {705--719},
pmid = {15926683},
title = {{Reproductive isolation caused by natural selection against immigrants from divergent habitats}},
