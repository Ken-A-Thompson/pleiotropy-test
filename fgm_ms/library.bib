journal = {Evolution},
keywords = {Ecological speciation,Epistasis,Hybrid breakdown,Hybrid fitness,Joint-scaling analysis,Reproductive isolation},
title = {{Ecologically dependent and intrinsic genetic signatures of postzygotic isolation between sympatric host races of the leaf beetle Lochmaea capreae}},
