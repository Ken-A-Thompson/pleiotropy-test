journal = {Evolution},
keywords = {AMPLIFICATION,CONSERVATION,COPEPOD TIGRIOPUS-CALIFORNICUS,DIFFERENTIATION,DISPERSAL,HYBRID BREAKDOWN,PITCHER-PLANT MOSQUITO,POPULATIONS,SPECIATION,Tigriopus,WYEOMYIA-SMITHII,californicus,copepod,fitness,quantitative genetics,speciation},
