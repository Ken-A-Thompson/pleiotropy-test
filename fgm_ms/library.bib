journal = {Proceedings of the National Academy of Sciences of the United States of America},
number = {10},
pages = {5426--5432},
pmid = {11344289},
title = {{Disrupting evolutionary processes: the effect of habitat fragmentation on collared lizards in the Missouri Ozarks.}},
volume = {98},
year = {2001}
}
