mendeley-tags = {Analise espacial,Ecological Niche Modeling,Maxent,Models,algorithm{\_}performance,algorithms,biodiversity{\_}data,brazilian{\_}cerrado,conservation{\_}biology,conservation{\_}decisions,distributions,ecological{\_}niche,enm,estimators,field{\_}evaluation,field{\_}inventories,fieldwork,garp,localities,sampling{\_}bias},
