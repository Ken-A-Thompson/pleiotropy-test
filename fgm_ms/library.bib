doi = {10.1016/j.cub.2017.09.037},
issn = {09609822},
journal = {Current Biology},
keywords = {QTL,assortative mating,ecological speciation,female mate choice,genetic coupling,threespine stickleback},
number = {21},
pages = {3344--3349.e4},
pmid = {29056455},
title = {{Genetic Coupling of Female Mate Choice with Polygenic Ecological Divergence Facilitates Stickleback Speciation}},
volume = {27},
year = {2017}
}
