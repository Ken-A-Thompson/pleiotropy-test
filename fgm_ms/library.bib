isbn = {0014-3820},
issn = {00143820},
journal = {Evolution},
keywords = {Convergent evolution,Epistasis,Experimental evolution,Hybrid breakdown,Multiple adaptive peaks,Outbreeding depression,Uniform selection},
number = {2},
pages = {274--287},
