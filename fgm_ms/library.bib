journal = {BMC Evolutionary Biology},
keywords = {Black swan,DRD4,Flight initiation distance,Habitat,black swan,drd4,flight initiation distance,habitat selection,sert,urbanisation},
number = {1},
pages = {253},
pmid = {26653173},
title = {{Variation at the {\textless}i{\textgreater}DRD4{\textless}/i{\textgreater} locus is associated with wariness and local site selection in urban black swans}},
