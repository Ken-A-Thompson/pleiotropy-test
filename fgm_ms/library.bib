month = {mar},
number = {5},
pages = {1053--1070},
pmid = {24438087},
title = {{Aridity shapes cyanogenesis cline evolution in white clover ({\textless}i{\textgreater}Trifolium repens{\textless}/i{\textgreater} L.).}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24438087},
