journal = {Evolution},
keywords = {Asymmetric reproductive isolation,Darwin's corollary,Odonata,Postzygotic isolation,Prezygotic isolation,Speciation},
number = {3},
pages = {690--707},
pmid = {22380433},
title = {{Strong asymmetry in the relative strengths of prezygotic and postzygotic barriers between two damselfly sister species}},
volume = {66},
year = {2012}
}
