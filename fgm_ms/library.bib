author = {Marcer, Arnald and Pino, Joan and Pons, Xavier and Brotons, Lluis},
isbn = {1366-9516},
journal = {Diversity and Distributions},
keywords = {Biodiversity databases; Catalonia; cross-scale val},
month = {dec},
number = {12},
pages = {1177--1189},
title = {{Modelling invasive alien species distributions from digital biodiversity atlases. Model upscaling as a means of reconciling data at different scales}},
volume = {18},
