journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {Adaptation,Gonadal cycles,Life-history trait,Luteinizing hormone,Microevolution,Urbanization},
number = {1552},
pages = {1995--2001},
pmid = {15451688},
title = {{Differences in the timing of reproduction between urban and forest European blackbirds (Turdus merula): Result of phenotypic flexibility or genetic differences?}},
url = {http://rspb.royalsocietypublishing.org/cgi/doi/10.1098/rspb.2004.2821},
