isbn = {00129658},
issn = {0012-9658},
journal = {Ecology},
pages = {1043--1060},
pmid = {1207},
title = {{Generalization in pollination systems, and why it matters}},
url = {http://www.jstor.org/stable/2265575{\%}5Cnhttp://www.esajournals.org/doi/abs/10.2307/2265575},
volume = {77},
year = {1996}
