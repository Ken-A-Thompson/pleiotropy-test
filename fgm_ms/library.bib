keywords = {Alkaloids,Castilleja indivisa,Direct effects,Floral herbivory,Fruit predation,Hemiparasitic plants,Indian paintbrush,Indirect effects,Lupinus albus,Path analysis,Pollinators,Secondary compounds},
number = {7},
