doi = {10.1098/rstb.2009.0199},
isbn = {0962-8436},
issn = {0962-8436},
journal = {Philosophical Transactions of the Royal Society B: Biological Sciences},
keywords = {dioecy,floral diversity,mating,plant sex,self-fertilization,wind pollination},
