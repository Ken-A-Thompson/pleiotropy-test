journal = {Journal of Heredity},
keywords = {carotenoid,dewlap,geographic variation,heritability,pigmentation,signal divergence},
number = {6},
pages = {862--873},
title = {{The role of heritable and dietary factors in the sexual signal of a hispaniolan Anolis Lizard, Anolis distichus}},
volume = {104},
year = {2013}
}
@article{Swanson1990,
