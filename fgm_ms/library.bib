keywords = {Chromosomal inversions,Ecological genetics,FST,Introgression,Neutral gene flow,Outlier loci,Population genomics,QTL mapping,Speciation},
number = {3},
pages = {375--402},
pmid = {19143936},
title = {{Divergent selection and heterogeneous genomic divergence}},
volume = {18},
year = {2009}
}
