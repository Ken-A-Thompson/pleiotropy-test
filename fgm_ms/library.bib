arxivId = {3017},
author = {Nosil, Patrik and Sandoval, Cristina P.},
doi = {10.1371/journal.pone.0001907},
eprint = {3017},
isbn = {1932-6203 (Electronic)$\backslash$r1932-6203 (Linking)},
issn = {19326203},
journal = {PLoS ONE},
number = {4},
pmid = {18382680},
title = {{Ecological niche dimensionality and the evolutionary diversification of stick insects}},
volume = {3},
year = {2008}
}
